{
  "name": "apps-angular-technical-test",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "concurrently \"json-server --watch db.json\" \"ng serve\"",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test --code-coverage --watch",
    "generate-db": "node generate-hotels-db.js",
    "lint": "eslint . --ext .ts,.html",
    "format": "prettier --write \"src/**/*.{ts,html,css,scss}\"",
    "format:check": "prettier --check \"src/**/*.{ts,html,css,scss}\"",
    "docker:build": "docker build -t angular-spa:latest .",
    "docker:run": "docker run --rm -p 8080:80 angular-spa:latest",
    "docker:dev": "docker compose -f docker-compose.dev.yml up",
    "docker:stop": "docker compose -f docker-compose.dev.yml down"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "17.1.0",
    "@angular/common": "17.1.0",
    "@angular/compiler": "17.1.0",
    "@angular/core": "17.1.0",
    "@angular/forms": "17.1.0",
    "@angular/platform-browser": "17.1.0",
    "@angular/platform-browser-dynamic": "17.1.0",
    "@angular/router": "17.1.0",
    "bootstrap": "^5.3.5",
    "rxjs": "7.8.0",
    "tslib": "2.3.0",
    "zone.js": "0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "17.1.2",
    "@angular-eslint/eslint-plugin": "^19.3.0",
    "@angular-eslint/eslint-plugin-template": "^19.3.0",
    "@angular-eslint/template-parser": "^19.3.0",
    "@angular/cli": "17.1.2",
    "@angular/compiler-cli": "17.1.0",
    "@eslint/js": "^9.24.0",
    "@faker-js/faker": "8.4.1",
    "@types/jasmine": "5.1.0",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "concurrently": "8.2.2",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "10.1.2",
    "eslint-plugin-prettier": "5.2.6",
    "faker": "6.6.6",
    "jasmine-core": "5.1.0",
    "json-server": "^0.17.4",
    "karma": "6.4.0",
    "karma-chrome-launcher": "3.2.0",
    "karma-coverage": "2.2.0",
    "karma-jasmine": "5.1.0",
    "karma-jasmine-html-reporter": "2.1.0",
    "prettier": "3.5.3",
    "typescript": "5.3.2"
  }
}
